{
	"manifest_version": 3,
	"name": "Kursach",
	"version": "1.0",
	"background": {
		"service_worker": "scripts/background.ts"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"ts": ["content.ts"]
		}
	],
	"action": {
		"default_popup": "src/popup.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"permissions": ["notifications", "activeTab"]
}
